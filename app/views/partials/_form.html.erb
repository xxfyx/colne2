<%= form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>

<div class="form-group">
  <%= f.label :title %>
   <%= f.text_field :title, :class => 'form-control', :required => true %>
</div>

<div class="form-group">
  <%= f.label :category %>
   <%= collection_select(:post, :category_id, Category.all, :id, :name, {:prompt=>true},{class: "form-control", :required => true}) %>
</div>

<div class="form-group">
  <%= f.label :description, :class => 'control-label' %>
  <%= f.text_area :description, :class => 'form-control', :required => true %>

</div>

<div class="form-group">
   <%= f.label  :price, :class => 'control-label' %> (DH)
   <%= f.number_field  :price, :class => 'form-control', :required => true%>
</div>


<div class="form-group">
  <%= f.label :city %>
   <%= collection_select(:post, :city_id, City.all, :id, :name, {:prompt=>true},{class: "form-control", :required => true}) %>
</div>

<div class="form-group">
  <%= f.label :phone, :class => 'control-label' %>
   <%= f.telephone_field :phone, :class => 'form-control', :required => true %>
</div>

<div class="form-group">
    <%= f.fields_for :pictures do |builder| %>
      <% if builder.object.new_record? %>
        <%= f.label :pictures, "images (only 6 images)", :class => 'control-label' %>
        <%= file_field_tag "images[]", type: :file, multiple: true %>
          <% end %>
    <% end %>
</div>

  <%= f.submit nil, :class => 'btn btn-custom' %>
<% end %>